<%- include('templates/header', { title: 'Admin Login' }) %>

<header class="bg-dark text-white text-center py-4">
  <h1>Admin Login</h1>
</header>

<main class="container my-4">
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="POST" action="/admin-login" class="mb-4 p-3 border rounded">
    <div class="mb-3">
      <label for="email"    class="form-label">Email</label>
      <input id="email"     name="email"    type="email"    class="form-control" required />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input id="password"  name="password" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning w-100">Admin Log In</button>
  </form>

  <div class="text-center">
    <a href="/login"  class="btn btn-secondary me-2">User Login</a>
    <a href="/signup" class="btn btn-primary">Sign Up</a>
  </div>
</main>

<%- include('templates/footer') %>
